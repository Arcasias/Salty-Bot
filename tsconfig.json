{
    "compilerOptions": {
        // "strict": true,
        "moduleResolution": "node",
        "declaration": false,
        "alwaysStrict": true,
        "pretty": false,
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "esnext",
            "esnext.array",
            "esnext.asynciterable",
            "esnext.intl",
            "esnext.symbol"
        ],
        "removeComments": true,
        "sourceMap": false,
        "outDir": "dist",
        "esModuleInterop": true
    },
    "include": ["index.ts", "local.ts", "test.ts", "src/**/*"],
    "exclude": ["node_modules"]
}
