{
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "declaration": false,
        "alwaysStrict": true,
        "pretty": false,
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "esnext",
            "esnext.array",
            "esnext.asynciterable",
            "esnext.intl",
            "esnext.symbol"
        ],
        "removeComments": true,
        "inlineSourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "typeRoots": ["./node_modules/@types"]
}
