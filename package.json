{
  "name": "salty",
  "version": "1.0.0",
  "description": "A crude and useful bot",
  "main": "main.js",
  "scripts": {
    "build": "prettier --write \"./src/**/*.{ts,json}\" && tsc",
    "dev": "ts-node src/local.ts",
    "local": "node dist/local.js",
    "start": "node dist/index.js",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arcasias/Salty-Bot.git"
  },
  "author": "Julien Mougenot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arcasias/Salty-Bot/issues"
  },
  "homepage": "https://github.com/Arcasias/Salty-Bot",
  "dependencies": {
    "@discordjs/opus": "^0.3.3",
    "axios": "^0.21.1",
    "discord.js": "github:discordjs/discord.js",
    "erlpack": "github:discordapp/erlpack",
    "pg": "^8.5.1",
    "pureimage": "^0.2.5",
    "ts-node": "^9.1.1",
    "ytdl-core": "^2.1.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^13.13.36",
    "@types/pg": "^7.14.7",
    "@types/ws": "^7.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": "15.x",
    "npm": "7.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "testEnvironment": "node",
    "testRegex": "(/tests/.*(test|spec))\\.ts?$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "verbose": false
  }
}
