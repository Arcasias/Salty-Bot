{
  "name": "salty",
  "version": "1.0.0",
  "description": "A crude and useful bot",
  "main": "src/index.ts",
  "scripts": {
    "build": "prettier --write \"./src/**/*.{ts,json}\"",
    "dev": "npm run build && ts-node -r dotenv/config src/index.ts",
    "start": "ts-node src/index.ts",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arcasias/Salty-Bot.git"
  },
  "author": "Julien Mougenot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arcasias/Salty-Bot/issues"
  },
  "homepage": "https://github.com/Arcasias/Salty-Bot",
  "dependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^13.13.36",
    "@types/pg": "^7.14.7",
    "@types/ws": "^7.4.0",
    "axios": "^0.21.1",
    "discord.js": "^12.5.0",
    "pg": "^8.5.1",
    "pureimage": "^0.2.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "dotenv": "^10.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4"
  },
  "engines": {
    "node": "16.x"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/tests"
    ],
    "testEnvironment": "node",
    "testRegex": "(/tests/.*(test|spec))\\.ts?$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "verbose": false
  }
}
